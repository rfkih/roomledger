package com.roomledger.app.model;

import jakarta.persistence.*;
import lombok.Getter;
import lombok.Setter;

import java.util.UUID;

@Entity
@Setter
@Getter
@Table(name = "buildings") // if no default schema: @Table(name="buildings", schema="roomledger")
public class Building {
    @Id
    @GeneratedValue(strategy = GenerationType.UUID) // app generates UUID (OK even if DB has a default)
    private UUID id;

    @Column(nullable = false)
    private String name;

    private String address;
}
